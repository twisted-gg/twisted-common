{
  "name": "twisted-common",
  "version": "1.0.0",
  "description": "Common utilities for twisted backends",
  "scripts": {
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint --fix -p tsconfig.json -c tslint.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/twisted.gg/twisted-common.git"
  },
  "keywords": [],
  "author": "TwistedGG",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/twisted.gg/twisted-common/issues"
  },
  "homepage": "https://gitlab.com/twisted.gg/twisted-common#readme",
  "devDependencies": {
    "@nestjs/testing": "^6.10.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.11",
    "@types/sinon": "^7.5.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "@nestjs/common": "^6.10.1",
    "express": "^4.17.1",
    "redis": "^2.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "(.*).dto.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
